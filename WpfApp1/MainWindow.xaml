<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diff &amp; Prompt Builder" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Top buttons -->
        <StackPanel Orientation="Horizontal">
            <Button x:Name="SetCodeBtn" Content="Choose File" Padding="12,6" Margin="0,0,8,0" Click="SetCodeBtn_Click"/>
            <!-- <Button x:Name="EditCodeBtn" Content="Edit Code" Padding="12,6" Margin="0,0,8,0" Click="EditCodeBtn_Click"/> -->
            <Button x:Name="BuildPromptBtn" Content="Save changes &amp; Create Diff + Prompt" Padding="12,6"
                    Click="BuildPromptBtn_Click"/>
        </StackPanel>

        <!-- Editors -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- <GroupBox Header="Baseline (original code)" Grid.Column="0" Margin="0,10,6,0"> -->
            <!--     <Grid> -->
            <!--         <TextBox x:Name="BaselineText" -->
            <!--                  TextWrapping="NoWrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" -->
            <!--                  FontFamily="Consolas" FontSize="14" /> -->
            <!--     </Grid> -->
            <!-- </GroupBox> -->

            <GroupBox Header="Current Code" Grid.Column="0" Margin="6,10,0,1">
                <Grid>
                    <TextBox x:Name="CurrentText"
                             TextWrapping="NoWrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas" FontSize="14" Text="Choose a file to start editing..." IsReadOnly="True"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Prompt output -->
        <GroupBox Grid.Row="2" Header="Prompt (read-only)" Margin="0,10,0,0">
            <DockPanel>
                <Button Content="Copy" DockPanel.Dock="Right" Margin="8" Padding="12,6" Click="CopyPrompt_Click"/>
                <TextBox x:Name="PromptText"
                         IsReadOnly="True"
                         TextWrapping="NoWrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="14" />
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
